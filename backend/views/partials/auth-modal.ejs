    opacity: 0.8;
    z-index: 0;
}

.auth-modal-bg-pattern-bottom {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 50% 110%, rgba(37,99,235,0.28), transparent 70%);
    opacity: 0.6;
    z-index: 0;
}

.auth-modal-header {
    position: relative;
    z-index: 1;

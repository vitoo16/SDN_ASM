<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= perfume.perfumeName %> - Odour Perfume</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/navigation.css">
    <link rel="stylesheet" href="/css/components.css">
    <link rel="stylesheet" href="/css/perfume-detail.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <%- include('partials/navigation') %>
    
    <main>
        <div class="perfume-detail-page">
            <div class="container-xl py-5">
                <!-- Back Button -->
                <a href="/" class="back-btn-new mb-4 fade-in">
                    <span class="material-icons">arrow_back</span>
                    Back to Products
                </a>

        <div class="perfume-detail-grid-new fade-in-up">
            <!-- Image Column -->
            <div class="perfume-image-col-new">
                <div class="perfume-image-wrapper-new glass-panel">
                    <img src="<%= perfume.uri %>" 
                         alt="<%= perfume.perfumeName %>" 
                         class="perfume-detail-image-new"
                         onerror="handlePerfumeImageError(this)">
                    <div class="perfume-image-fallback" id="perfumeImageFallback" style="display: none;">
                        <span class="material-icons" style="font-size: 80px; opacity: 0.3;">broken_image</span>
                        <p style="margin-top: 1rem; opacity: 0.6;">Image unavailable</p>
                    </div>
                </div>
            </div>

            <!-- Details Column -->
            <div class="perfume-details-col-new">
                <div class="perfume-info-card-new glass-panel">
                    <!-- Brand -->
                    <div class="perfume-brand-label"><%= perfume.brand.brandName %></div>

                    <!-- Name -->
                    <h1 class="perfume-detail-title"><%= perfume.perfumeName %></h1>

                    <!-- Rating -->
                    <% 
                    const avgRating = perfume.comments && perfume.comments.length > 0
                        ? perfume.comments.reduce((sum, c) => sum + c.rating, 0) / perfume.comments.length
                        : 0;
                    %>
                    <div class="perfume-rating-section">
                        <div class="rating-stars">
                            <% for (let i = 0; i < 3; i++) { %>
                                <% if (i < Math.floor(avgRating)) { %>
                                    <span class="material-icons star-filled">star</span>
                                <% } else if (i < avgRating) { %>
                                    <span class="material-icons star-half">star_half</span>
                                <% } else { %>
                                    <span class="material-icons star-empty">star_border</span>
                                <% } %>
                            <% } %>
                        </div>
                        <span class="rating-text">
                            <%= avgRating.toFixed(1) %> (<%= perfume.comments ? perfume.comments.length : 0 %> reviews)
                        </span>
                    </div>

                    <!-- Price -->
                    <div class="perfume-price-tag">$<%= perfume.price.toFixed(2) %></div>

                    <div class="detail-divider"></div>

                    <!-- Specifications -->
                    <div class="perfume-specs">
                        <div class="spec-item">
                            <span class="material-icons spec-icon">water_drop</span>
                            <div class="spec-content">
                                <div class="spec-label">Concentration</div>
                                <div class="spec-value"><%= perfume.concentration %></div>
                            </div>
                        </div>

                        <div class="spec-item">
                            <span class="material-icons spec-icon">local_offer</span>
                            <div class="spec-content">
                                <div class="spec-label">Volume</div>
                                <div class="spec-value"><%= perfume.volume %>ml</div>
                            </div>
                        </div>

                        <div class="spec-item">
                            <span class="material-icons spec-icon">people</span>
                            <div class="spec-content">
                                <div class="spec-label">Target Audience</div>
                                <div class="spec-value"><%= perfume.targetAudience.charAt(0).toUpperCase() + perfume.targetAudience.slice(1) %></div>
                            </div>
                        </div>

                        <div class="spec-item">
                            <span class="material-icons spec-icon">category</span>
                            <div class="spec-content">
                                <div class="spec-label">Brand</div>
                                <div class="spec-value"><%= perfume.brand.brandName %></div>
                            </div>
                        </div>
                    </div>

                    <div class="detail-divider"></div>

                    <!-- Description -->
                    <div class="perfume-section">
                        <h3 class="section-heading">Description</h3>
                        <p class="section-text"><%= perfume.description %></p>
                    </div>

                    <!-- Ingredients -->
                    <div class="perfume-section">
                        <h3 class="section-heading">Ingredients</h3>
                        <p class="section-text"><%= perfume.ingredients %></p>
                    </div>

                    <!-- Add to Cart Button -->
                    <button class="add-to-cart-btn-large btn-primary" onclick="addToCart('<%= perfume._id %>')">
                        <span class="material-icons">shopping_cart</span>
                        Add to Cart
                    </button>
                </div>

                <!-- Comments Section -->
                <div class="comments-section mt-4">
                    <h3 class="comments-title">
                        <span class="material-icons" style="vertical-align: middle; margin-right: 0.5rem; color: var(--accent-primary);">rate_review</span>
                        Customer Reviews
                    </h3>

                    <!-- Add Comment Form -->
                    <% 
                    // Check if user already commented
                    const userHasCommented = typeof user !== 'undefined' && user && perfume.comments && perfume.comments.some(c => c.author._id.toString() === user._id.toString());
                    %>
                    
                    <% if (typeof user !== 'undefined' && user && !user.isAdmin) { %>
                        <% if (userHasCommented) { %>
                            <div class="admin-notice" style="background: rgba(66, 133, 244, 0.1); border-color: rgba(66, 133, 244, 0.3);">
                                <span class="material-icons" style="font-size: 2rem; opacity: 0.7; margin-bottom: 0.5rem; color: var(--accent-primary);">check_circle</span>
                                <p style="color: var(--text-primary); text-align: center;">
                                    You have already reviewed this perfume. You can edit your review below.
                                </p>
                            </div>
                        <% } else { %>
                            <form class="comment-form fade-in-up" action="/perfumes/<%= perfume._id %>/comments" method="POST" data-loading>
                                <div class="form-group">
                                    <label class="form-label">Your Rating</label>
                                    <div class="rating-input" id="ratingInput">
                                        <input type="radio" name="rating" value="1" id="rating1" required>
                                        <label for="rating1" class="rating-star">
                                            <span class="material-icons">star</span>
                                        </label>
                                        <input type="radio" name="rating" value="2" id="rating2">
                                        <label for="rating2" class="rating-star">
                                            <span class="material-icons">star</span>
                                        </label>
                                        <input type="radio" name="rating" value="3" id="rating3">
                                        <label for="rating3" class="rating-star">
                                            <span class="material-icons">star</span>
                                        </label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Your Review</label>
                                    <textarea 
                                        name="content" 
                                        class="form-control" 
                                        rows="4" 
                                        placeholder="Share your thoughts about this perfume..."
                                        required
                                        maxlength="500"
                                    ></textarea>
                                </div>

                                <button type="submit" class="btn-primary">
                                    <span class="material-icons">send</span>
                                    Submit Review
                                </button>
                            </form>
                        <% } %>
                    <% } else if (typeof user !== 'undefined' && user && user.isAdmin) { %>
                        <div class="admin-notice">
                            <span class="material-icons" style="font-size: 2rem; opacity: 0.5; margin-bottom: 0.5rem;">admin_panel_settings</span>
                            <p style="color: var(--text-secondary); text-align: center;">
                                Admins cannot leave reviews
                            </p>
                        </div>
                    <% } else { %>
                        <div class="login-prompt">
                            <p>Please <a href="/auth/login?redirect=/perfumes/<%= perfume._id %>">login</a> to leave a review</p>
                        </div>
                    <% } %>

                    <!-- Comments List -->
                    <div class="comments-list">
                        <% if (perfume.comments && perfume.comments.length > 0) { %>
                            <% perfume.comments.forEach(function(comment) { %>
                                <div class="comment-item">
                                    <div class="comment-header">
                                        <div class="comment-author">
                                            <div class="author-avatar">
                                                <%= comment.author.name.charAt(0).toUpperCase() %>
                                            </div>
                                            <div class="author-info">
                                                <div class="author-name"><%= comment.author.name %></div>
                                                <div class="comment-date">
                                                    <%= new Date(comment.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="comment-rating">
                                            <% for (let i = 0; i < 3; i++) { %>
                                                <span class="material-icons <%= i < comment.rating ? 'star-filled' : 'star-empty' %>">
                                                    <%= i < comment.rating ? 'star' : 'star_border' %>
                                                </span>
                                            <% } %>
                                        </div>
                                    </div>

                                    <p class="comment-content"><%= comment.content %></p>

                                    <% if (typeof user !== 'undefined' && user) { %>
                                        <div class="comment-actions">
                                            <!-- Only comment owner can edit their own comment (NOT admin) -->
                                            <% if (user._id.toString() === comment.author._id.toString() && !user.isAdmin) { %>
                                                <button class="comment-action-btn edit-btn" 
                                                    data-perfume-id="<%= perfume._id %>" 
                                                    data-comment-id="<%= comment._id %>" 
                                                    data-rating="<%= comment.rating %>" 
                                                    data-content="<%= comment.content.replace(/"/g, '&quot;') %>">
                                                    <span class="material-icons">edit</span>
                                                    Edit
                                                </button>
                                            <% } %>
                                            
                                            <!-- Only comment owner can delete their own comment (NOT admin) -->
                                            <% if (user._id.toString() === comment.author._id.toString() && !user.isAdmin) { %>
                                                <form action="/perfumes/<%= perfume._id %>/comments/<%= comment._id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this review?')">
                                                    <button type="submit" class="comment-action-btn delete-btn">
                                                        <span class="material-icons">delete</span>
                                                        Delete
                                                    </button>
                                                </form>
                                            <% } %>
                                        </div>
                                    <% } %>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="empty-state">
                                <span class="material-icons empty-icon">rate_review</span>
                                <p>No reviews yet. Be the first to review this perfume!</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>

    <!-- Edit Comment Modal -->
<div id="editModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Edit Review</h3>
            <button class="modal-close" onclick="closeEditModal()">
                <span class="material-icons">close</span>
            </button>
        </div>
        <form id="editCommentForm" method="POST" data-loading>
            <div class="form-group">
                <label class="form-label">Rating</label>
                <div class="rating-input" id="editRatingInput">
                    <input type="radio" name="rating" value="1" id="editRating1" required>
                    <label for="editRating1" class="rating-star">
                        <span class="material-icons">star</span>
                    </label>
                    <input type="radio" name="rating" value="2" id="editRating2">
                    <label for="editRating2" class="rating-star">
                        <span class="material-icons">star</span>
                    </label>
                    <input type="radio" name="rating" value="3" id="editRating3">
                    <label for="editRating3" class="rating-star">
                        <span class="material-icons">star</span>
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Review</label>
                <textarea 
                    name="content" 
                    id="editContent"
                    class="form-control" 
                    rows="4" 
                    required
                    maxlength="500"
                ></textarea>
            </div>

            <div class="modal-actions">
                <button type="button" class="btn-secondary" onclick="closeEditModal()">Cancel</button>
                <button type="submit" class="btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>

<script>
    function handleImageError(img, type) {
            console.log('Image load error:', img.src);
            
            if (type === 'hero') {
                // Hide image, show fallback
                img.style.display = 'none';
                const fallback = document.getElementById('heroImageFallback');
                if (fallback) {
                    fallback.style.display = 'flex';
                }
            } else if (type === 'card') {
                // Hide image, show fallback
                img.style.display = 'none';
                const wrapper = img.closest('.perfume-card-image-wrapper');
                if (wrapper) {
                    const fallback = wrapper.querySelector('.card-fallback');
                    if (fallback) {
                        fallback.style.display = 'flex';
                    }
                }
            }
        }
// Image fallback handler
function handlePerfumeImageError(img) {
    console.log('Perfume image failed to load:', img.src);
    img.style.display = 'none';
    const fallback = document.getElementById('perfumeImageFallback');
    if (fallback) {
        fallback.style.display = 'flex';
    }
}

// Rating input interaction
document.querySelectorAll('.rating-input').forEach(ratingInput => {
    const stars = ratingInput.querySelectorAll('.rating-star');
    stars.forEach((star, index) => {
        star.addEventListener('mouseenter', () => {
            stars.forEach((s, i) => {
                if (i <= index) {
                    s.querySelector('.material-icons').textContent = 'star';
                } else {
                    s.querySelector('.material-icons').textContent = 'star_border';
                }
            });
        });
    });

    ratingInput.addEventListener('mouseleave', () => {
        const checked = ratingInput.querySelector('input[type="radio"]:checked');
        if (checked) {
            const checkedIndex = Array.from(ratingInput.querySelectorAll('input')).indexOf(checked);
            stars.forEach((s, i) => {
                if (i <= checkedIndex) {
                    s.querySelector('.material-icons').textContent = 'star';
                } else {
                    s.querySelector('.material-icons').textContent = 'star_border';
                }
            });
        } else {
            stars.forEach(s => {
                s.querySelector('.material-icons').textContent = 'star_border';
            });
        }
    });
});

// Event delegation for edit buttons
document.addEventListener('DOMContentLoaded', function() {
    document.addEventListener('click', function(e) {
        if (e.target.closest('.edit-btn')) {
            const btn = e.target.closest('.edit-btn');
            const perfumeId = btn.dataset.perfumeId;
            const commentId = btn.dataset.commentId;
            const rating = btn.dataset.rating;
            const content = btn.dataset.content;
            editComment(perfumeId, commentId, rating, content);
        }
    });
});

// Edit comment
function editComment(perfumeId, commentId, rating, content) {
    const modal = document.getElementById('editModal');
    const form = document.getElementById('editCommentForm');
    const editContent = document.getElementById('editContent');
    
    form.action = '/perfumes/' + perfumeId + '/comments/' + commentId + '/edit';
    editContent.value = content;
    document.getElementById('editRating' + rating).checked = true;
    
    // Update stars display
    const stars = document.querySelectorAll('#editRatingInput .rating-star');
    stars.forEach((star, index) => {
        if (index < rating) {
            star.querySelector('.material-icons').textContent = 'star';
        } else {
            star.querySelector('.material-icons').textContent = 'star_border';
        }
    });
    
    modal.style.display = 'flex';
}

function closeEditModal() {
    document.getElementById('editModal').style.display = 'none';
}

// Close modal on outside click
window.onclick = function(event) {
    const modal = document.getElementById('editModal');
    if (event.target === modal) {
        closeEditModal();
    }
}
</script>
    </main>

    <%- include('partials/footer') %>

    <script src="/js/main.js"></script>
    <script src="/js/cart.js"></script>

    <%- include('partials/auth-modal') %>
</body>
</html>

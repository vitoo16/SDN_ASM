<!-- Brand Modal -->
<div class="admin-modal" id="brandModal" style="display: none;">
    <div class="admin-modal-overlay" onclick="closeBrandModal()"></div>
    <div class="admin-modal-content admin-modal-small">
        <div class="admin-modal-header">
            <h2 id="brandModalTitle">Add New Brand</h2>
            <button class="modal-close-btn" onclick="closeBrandModal()">
                <span class="material-icons">close</span>
            </button>
        </div>

        <form id="brandForm" onsubmit="submitBrandForm(event)">
            <input type="hidden" id="brandId" name="brandId">
            
            <div class="admin-modal-body">
                <div id="brandModalError" class="modal-alert modal-alert-error" style="display: none;"></div>

                <p class="modal-form-description">
                    Give this house an expressive name to keep your lineup cohesive.
                </p>

                <div class="modal-form-field">
                    <label class="modal-form-label">
                        Brand Name <span class="required">*</span>
                    </label>
                    <input 
                        type="text" 
                        name="brandName" 
                        id="brandName"
                        class="modal-form-input" 
                        required
                        autofocus
                    />
                    <p class="modal-form-hint">
                        Brand names must be unique; existing labels cannot be reused.
                    </p>
                </div>
            </div>

            <div class="admin-modal-footer">
                <button type="button" class="modal-btn-cancel" onclick="closeBrandModal()">
                    Cancel
                </button>
                <button type="submit" class="modal-btn-submit" id="brandSubmitBtn">
                    <span class="btn-text">Create</span>
                    <span class="btn-spinner" style="display: none;">
                        <span class="spinner-small"></span>
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>


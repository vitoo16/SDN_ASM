    }
}

.auth-modal-bg-pattern-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 260px;
    background: radial-gradient(circle at 20% 30%, rgba(224,212,255,0.22), transparent 60%), 

<!-- Auth Modal -->
<div class="auth-modal" id="authModal" style="display: none;">
    <div class="auth-modal-overlay" id="authModalOverlay"></div>
    <div class="auth-modal-container">
        <!-- Enhanced Background Pattern -->
        <div class="auth-modal-bg-pattern-top"></div>
        <div class="auth-modal-bg-pattern-bottom"></div>

        <!-- Header with Tabs -->
        <div class="auth-modal-header">
            <div class="auth-modal-tabs">
                <button class="auth-tab active" data-tab="login">Sign In</button>
                <button class="auth-tab" data-tab="register">Sign Up</button>
            </div>
            <button class="auth-modal-close" id="authModalClose">
                <span class="material-icons">close</span>
            </button>
        </div>

        <!-- Content -->
        <div class="auth-modal-content">
            <!-- Login Form -->
            <div class="auth-form-wrapper active" id="loginForm">
                <div class="auth-welcome">
                    <h2 class="auth-title">Welcome Back!</h2>
                    <p class="auth-subtitle">Sign in to explore our premium fragrance collection</p>
                </div>

                <% if (typeof loginError !== 'undefined' && loginError) { %>
                    <div class="alert alert-error">
                        <span class="material-icons">error</span>
                        <%= loginError %>
                    </div>
                <% } %>

                <form action="/auth/login" method="POST" class="auth-form">
                    <input type="hidden" name="redirect" value="<%= typeof redirect !== 'undefined' ? redirect : '/' %>" />
                    
                    <div class="auth-input-group">
                        <span class="material-icons auth-input-icon">email</span>
                        <input 
                            type="email" 
                            name="email" 
                            class="auth-input" 
                            placeholder="Email Address"
                            required
                            autofocus
                        />
                    </div>

                    <div class="auth-input-group">
                        <span class="material-icons auth-input-icon">lock</span>
                        <input 
                            type="password" 
                            name="password" 
                            class="auth-input" 
                            placeholder="Password"
                            required
                            id="loginPassword"
                        />
                        <button type="button" class="auth-password-toggle" data-target="loginPassword">
                            <span class="material-icons">visibility</span>
                        </button>
                    </div>

                    <button type="submit" class="auth-submit-btn">
                        <span>Sign In</span>
                    </button>

                    <div class="auth-divider">
                        <span>Or continue with</span>
                    </div>

                    <a href="/auth/google" class="auth-google-btn">
                        <svg class="google-icon" viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                        <span>Sign in with Google</span>
                    </a>

                    <div class="auth-footer">
                        <p>By signing in, you agree to our Terms of Service and Privacy Policy</p>
                    </div>
                </form>
            </div>

            <!-- Register Form -->
            <div class="auth-form-wrapper" id="registerForm">
                <div class="auth-welcome">
                    <h2 class="auth-title">Join Odour</h2>
                    <p class="auth-subtitle">Create your account to discover exquisite scents</p>
                </div>

                <% if (typeof registerError !== 'undefined' && registerError) { %>
                    <div class="alert alert-error">
                        <span class="material-icons">error</span>
                        <%= registerError %>
                    </div>
                <% } %>

                <form action="/auth/register" method="POST" class="auth-form">
                    <input type="hidden" name="redirect" value="<%= typeof redirect !== 'undefined' ? redirect : '/' %>" />
                    
                    <div class="auth-input-group">
                        <span class="material-icons auth-input-icon">email</span>
                        <input 
                            type="email" 
                            name="email" 
                            class="auth-input" 
                            placeholder="Email Address"
                            required
                        />
                    </div>

                    <div class="auth-input-group">
                        <span class="material-icons auth-input-icon">lock</span>
                        <input 
                            type="password" 
                            name="password" 
                            class="auth-input" 
                            placeholder="Password (min 6 characters)"
                            minlength="6"
                            required
                            id="registerPassword"
                        />
                        <button type="button" class="auth-password-toggle" data-target="registerPassword">
                            <span class="material-icons">visibility</span>
                        </button>
                    </div>

                    <div class="auth-input-group">
                        <span class="material-icons auth-input-icon">lock</span>
                        <input 
                            type="password" 
                            name="confirmPassword" 
                            class="auth-input" 
                            placeholder="Confirm Password"
                            minlength="6"
                            required
                            id="confirmPassword"
                        />
                        <button type="button" class="auth-password-toggle" data-target="confirmPassword">
                            <span class="material-icons">visibility</span>
                        </button>
                    </div>

                    <div class="auth-input-group">
                        <span class="material-icons auth-input-icon">person</span>
                        <input 
                            type="text" 
                            name="name" 
                            class="auth-input" 
                            placeholder="Full Name"
                            minlength="2"
                            required
                        />
                    </div>

                    <div class="auth-input-group">
                        <span class="material-icons auth-input-icon">event</span>
                        <input 
                            type="number" 
                            name="YOB" 
                            class="auth-input" 
                            placeholder="Year of Birth"
                            min="<%= new Date().getFullYear() - 80 %>"
                            max="<%= new Date().getFullYear() %>"
                            required
                        />
                    </div>

                    <div class="auth-input-group">
                        <span class="material-icons auth-input-icon">wc</span>
                        <select name="gender" class="auth-input auth-select" required>
                            <option value="">Select Gender</option>
                            <option value="true">Male</option>
                            <option value="false">Female</option>
                        </select>
                    </div>

                    <button type="submit" class="auth-submit-btn">
                        <span class="material-icons">check_circle</span>
                        <span>Create Account</span>
                    </button>

                    <div class="auth-divider">
                        <span>Or continue with</span>
                    </div>

                    <a href="/auth/google" class="auth-google-btn">
                        <svg class="google-icon" viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                        <span>Sign in with Google</span>
                    </a>

                    <div class="auth-footer">
                        <p>By creating an account, you agree to our Terms of Service and Privacy Policy</p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>

<div class="error-page">
    <div class="error-container">
        <div class="error-content glass-panel fade-in-up">
            <div class="error-icon">
                <span class="material-icons">error_outline</span>
            </div>
            
            <h1 class="error-title"><%= error %></h1>
            
            <% if (typeof message !== 'undefined' && message) { %>
                <p class="error-message"><%= message %></p>
            <% } %>

            <div class="error-actions">
                <a href="/" class="btn-primary">
                    <span class="material-icons">home</span>
                    Go Home
                </a>
                <button onclick="history.back()" class="btn-secondary">
                    <span class="material-icons">arrow_back</span>
                    Go Back
                </button>
            </div>
        </div>
    </div>
</div>

<style>
.error-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: radial-gradient(circle at 20% 20%, rgba(216, 198, 255, 0.15), transparent 55%),
                radial-gradient(circle at 80% 80%, rgba(129, 212, 255, 0.12), transparent 55%),
                linear-gradient(180deg, #06070a 0%, #10131b 50%, #0b0d12 100%);
}

.error-container {
    max-width: 600px;
    width: 100%;
}

.error-content {
    text-align: center;
    padding: 4rem 3rem;
}

.error-icon {
    font-size: 6rem;
    color: #fca5a5;
    margin-bottom: 2rem;
    filter: drop-shadow(0 8px 16px rgba(248, 113, 113, 0.4));
}

.error-icon .material-icons {
    font-size: inherit;
}

.error-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1rem;
}

.error-message {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 2.5rem;
    line-height: 1.6;
}

.error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

@media (max-width: 480px) {
    .error-content {
        padding: 3rem 2rem;
    }

    .error-title {
        font-size: 1.75rem;
    }

    .error-actions {
        flex-direction: column;
    }
}
</style>

